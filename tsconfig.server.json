{
  // tsconfig.server.json  (place in PROJECT ROOT)
  // Separate tsconfig just for the custom server.ts file.
  // This prevents conflicts with Next.js's own tsconfig.json.

  "compilerOptions": {
    "target":           "ES2019",
    "module":           "CommonJS",
    "lib":              ["ES2019"],
    "strict":           true,
    "esModuleInterop":  true,
    "skipLibCheck":     true,
    "outDir":           ".server-dist",
    "rootDir":          ".",
    "resolveJsonModule": true
  },
  "include": ["server.ts"],
  "exclude": ["node_modules", ".next"]
}